# ——— Discord ———
DISCORD_TOKEN=discord_bot_token_here
CLIENT_ID=discord_client_id_here
OWNER_ID=your_discord_userID_here

# ——— Locale Settings ———
DEFAULT_LOCALE=vi
AI_RESPONSE_LOCALE=vi

# ——— OpenRouter ———
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
# OPENROUTER_API_KEY=api_key_here
# OPENROUTER_REFERER=https://lunaby.io.vn
# OPENROUTER_TITLE=Luna-AI

# ——— Heroku Inference ———
# HEROKU_BASE_URL=https://us.inference.heroku.com/v1
# HEROKU_API_KEY=api_key_here
# HEROKU_DEFAULT_MODEL=gpt-oss-120b
# HEROKU_THINKING_MODEL=gpt-oss-120b

# ——— Alibaba Model Studio (Qwen) ———
# ALIBABA_BASE_URL=https://dashscope-intl.aliyuncs.com/compatible-mode/v1
# ALIBABA_API_KEY=api_key_here

# ——— OpenAI ———
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_API_KEY=api_key_here

# ——— Google ———
# GOOGLE_BASE_URL=https://generativelanguage.googleapis.com
# GOOGLE_API_KEY=api_key_here
# GOOGLE_CSE_ID=google_cse_id_here 

# ——— Perplexity ———
# PERPLEXITY_BASE_URL=https://api.perplexity.ai
# PERPLEXITY_API_KEY=api_key_here

# ——— AWS Bedrock ———
# AWS_REGION=us-east-1
# AWS_BEARER_TOKEN_BEDROCK=api_key_here
# AWS_BEDROCK_DEFAULT_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0
# AWS_BEDROCK_THINKING_MODEL=us.anthropic.claude-3-7-sonnet-20250219-v1:0
# AWS_BEDROCK_IMAGE_MODEL=anthropic.claude-3-5-sonnet-20241022-v2:0

# ——— Luna ———
# ENABLE_LOCAL_MODEL=false
# LUNA_BASE_URL=http://localhost:11434/v1
# LUNA_DEFAULT_MODEL=luna:30b
# LUNA_THINKING_MODEL=luna:235b
# LUNA_MAX_TOKENS=1024
# LUNA_TEMPERATURE=0.7

# ——— Luna defaults ———
# LUNA_LOGICAL_MODEL=default
# LUNA_DEBUG=false

# ——— Internationalization (i18n) ———
# Default locale for the bot (vi = Vietnamese, en-US = English)
APP_DEFAULT_LOCALE=vi
# Fallback locale when translation is not found
APP_FALLBACK_LOCALE=en-US
# Enable auto-detection of user locale from Discord
APP_AUTO_DETECT_LOCALE=true

# ——— Dashboard ———
# CLIENT_SECRET=discord_client_secret_here
# CALLBACK_URL=http://localhost:3000/login/api
# DASHBOARD_PORT=3000

# ——— MongoDB ———
# example MONGODB_URI=mongodb://localhost:27017/luna
MONGODB_URI=uri_mongodb_here 

# ——— SSL ———
# SSL Certificate Verification:
# - To enable SSL verification (recommended): NODE_TLS_REJECT_UNAUTHORIZED=1
# - To disable SSL verification (only if absolutely necessary): NODE_TLS_REJECT_UNAUTHORIZED=0
NODE_TLS_REJECT_UNAUTHORIZED=1
# Custom SSL Certificate
# CUSTOM_CA_CERT_PATH=/path/to/your/certificate.pem

# ——— MAL ———
# MAL_CLIENT_ID=your_mal_client_id_here

# ——— Hugging Face ———
# Cau hinh Hugging Face và Gradio
# HF_TOKEN (private Space)
# HF_TOKEN=your_huggingface_token_here
# Gradio space
# Default: stabilityai/stable-diffusion-3-medium (public space)
GRADIO_IMAGE_SPACE=stabilityai/stable-diffusion-3-medium
